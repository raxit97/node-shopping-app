<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="product-form" method="post" action="/login" novalidate>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-control">
                                <label for="email">Email Address</label>
                                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                    value="<%= oldInput.email %>" type="email" name="email" id="email" />
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input
                                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                    value="<%= oldInput.password %>" type="password" name="password" id="password" />
                            </div>
                            <button type="submit">Login</button>
                        </form>
                        <div class="centered">
                            <a href="/reset-password">Reset Password</a>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>